@model MusicApp.Models.KeyboardModeModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("ChooseMode", "KeyboardMode", FormMethod.Post))
        {
            <div class="bs-example" style="border:2px solid gray;">

                <div class="form-group centerlook">
                    <h1> Choose mode </h1>
                </div>
                <div class="form-group centerlook">
                    <label>Free</label>
                    @Html.RadioButtonFor(m => m.Mode, "free")
                    <label>Excercise</label>
                    @Html.RadioButtonFor(m => m.Mode, "exercise")
                    <label>Song</label>
                    @Html.RadioButtonFor(m => m.Mode, "song")
                    <label>Improvisation</label>
                    @Html.RadioButtonFor(m => m.Mode, "improvisation")

                </div>
              
                <div class="">

                    <input type="submit" value="Login" class="btn btn-primary" />

                </div>
            </div>
        }
    </div>
</body>
</html>
